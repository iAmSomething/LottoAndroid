root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml,json,md}]
indent_size = 2

[*.{kt,kts}]
indent_size = 4
max_line_length = 120
ktlint_standard_function-naming = disabled
ktlint_standard_max-line-length = disabled
